{
  "compilerOptions": {
    /* Dossiers de compilation */
    "rootDir": "src",
    "outDir": "dist",

    /* Cible et module */
    "target": "ES2020",
    "module": "commonjs",

    /* Options de typage strict */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Résolution et détection des modules */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],

    /* Outils utiles */
    "sourceMap": true,
    "declaration": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
